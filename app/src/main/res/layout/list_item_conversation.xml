<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar_conversation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/avatar3" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_avatar_conversation"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_msg_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar_conversation"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_avatar_conversation"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="#9c9c9c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="#9c9c9c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar_conversation"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/unread_bk"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>