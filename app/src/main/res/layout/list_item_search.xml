<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_avatar_search"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@mipmap/avatar_9"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_username_search"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_avatar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time_search"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_avatar_search"
            android:layout_alignBottom="@id/iv_avatar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_search"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>